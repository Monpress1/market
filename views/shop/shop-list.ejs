<%- include('../partials/header'); -%>
<%- include('../partials/navbar'); -%>
<div class="container">
  <div class="d-flex flex-column justify-content-center">
    <div>
      <div>
        <h1>Shops</h1>
      </div>
    </div>

    <div>
      <% for(let shop of shops){ %>
      <a target="_blank" href="http://<%= shop.domain %>.<%= process.env.APP_SUBHOST %>/auth/login?token=<%= token %>">
        <div class="card mb-2">
          <div class="card-body">
            <div>
              <%= shop.ShopDetails[0].name %>
            </div>
            <div>
              Status: <%= shop.status %>
            </div>
          </div>
        </div>
      </a>
      <% } %>
    </div>


  </div>

</div>

<script>
  //show image from local image upload
  j("#image").on("change", function() {
    j("#image").imageSet(j("#img"));
    j('#img').css('width', '500px');
    j('#img').css('height', '500px');
  });
</script>

