<%- include('../../partials/header'); -%>
<%- include('../../partials/navbar'); -%>
<%- include('../../partials/sidebar'); -%>

<!-- Main section -->
<main class="mt-5 pt-3">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12 fw-bold fs-3">
        Add Category
      </div>
      <div class="col-md-12 fw-bold fs-3">
        <a class="btn btn-outline-primary" href="/admin/product/category">View all Category</a>
      </div>

    </div>
    <div class="row">
      <form action="/admin/product/category" method="post">
        <div class="d-flex justify-content-center">
          <div>
            <div class="d-flex p-2 justify-content-between">
              <!-- publish button -->
              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="flexCheckDefault" name="published" checked>
                <label class="form-check-label" for="flexCheckDefault">
                  Publish
                </label>
              </div>
            </div>

            <% if(message){ %>
            <div class="alert alert-primary" role="alert">
              <%= message %>
            </div>
            <% } %>

            <div class="mb-3">
              <input class="form-control" placeholder="Enter name" type="text" name="name" />
            </div>

            <div class="mb-3">
              <input class="btn btn-primary" type="submit" value="Submit" />
            </div>

          </div>
      </form>
    </div>



  </div>
  </div>
</main>
<!-- End Main section -->

<%- include('../../partials/footer'); -%>