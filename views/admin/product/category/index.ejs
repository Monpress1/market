<%- include('../../partials/header'); -%>
<%- include('../../partials/navbar'); -%>
<%- include('../../partials/sidebar'); -%>

<!-- Main section -->
<main class="mt-5 pt-3">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12 fw-bold fs-3">
        View Category
      </div>
      <div class="col-md-12 fw-bold fs-3">
        <a class="btn btn-outline-primary" href="/admin/product/category/add">Add New Product</a>
      </div>
    </div>
    <div class="row">
      <div class="row justify-content-md-center">
        <table class="table table-striped table-hover">
          <tr>
            <th>
              Product Name
            </th>
            <th>
              Price
            </th>
            <th>Stock</th>
            <th>
              Action
            </th>
          </tr>
          <% for(let post of category) { %>

          <tr>
            <td>
              <%= post.name %>
            </td>
            <td>
              <%= post.price %>
            </td>
            <td>
              <%= post.stock %>
            </td>
            <td>
              <a href="/admin/product/category/edit/<%= post.id %>" class="btn btn-outline-primary">Edit</a>
              <a href="/admin/product/category/delete/<%= post.id %>" class="btn btn-outline-danger">Delete</a>
            </td>
          </tr>
          <% } %>
        </table>
      </div>

    </div>



  </div>
  </div>
</main>
<!-- End Main section -->

<%- include('../../../partials/footer'); -%>