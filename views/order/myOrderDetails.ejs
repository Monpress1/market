<%- include('../partials/header'); -%>
<%- include('../partials/navbar'); -%>

<div class="container">

  <div class="row justify-content-md-center">
    <h1>My Order</h1>

    <div class="d-flex justify-content-between">
      <div>
        <h2><a href="/order">View Order</a></h2>
      </div>

      <div>
        <h3><a href="/invoice/order/<%= order.orderId %> ">Download PDF</a></h3>
      </div>
    </div>


    <div>
      <% if(
        (order.status != "order_placed")) {%>

      <% }else{ %>
      <form style="display: inline;" action="/order/pay/<%= order.orderId %> " method="post">
        <button class="btn btn-success" type="submit">Pay</button>
      </form>

      <form style="display: inline;" action="/order/cancel/<%= order.orderId %> " method="post">
        <button class="btn btn-danger" type="submit">Cancel</button>
      </form>
      <% } %>
    </div>


    <table class="table table-striped table-hover">
      <tr>
        <th>Order ID</th>
        <th>Order Date</th>
        <th>Order Status</th>
        <th>Order Total</th>
      </tr>
      <tr>
        <td><%= order.orderId %></td>
        <td><%= order.createdAt %></td>
        <td><%= order.status %></td>
        <td><%= order.price %></td>
      </tr>
    </table>

    <h2>Order Item</h2>
    <table class="table table-striped table-hover">
      <tr>
        <th>Product Name</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
      <% for(let orderItem of order.OrderItem){ %>
      <tr>
        <td> <a href="/product/<%= orderItem.product.id %> "><%= orderItem.product.name %></a></td>
        <td><%= orderItem.quantity %></td>
        <td><%= orderItem.price %></td>
      </tr>
      <% } %>
    </table>
  </div>

</div>

<%- include('../partials/footer'); -%>