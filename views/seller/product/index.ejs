<%- include('../partials/header'); -%>
<%- include('../partials/navbar'); -%>
<%- include('../partials/sidebar'); -%>

<!-- Main section -->
<main class="mt-5 pt-3">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12 fw-bold fs-3">
        View Products
      </div>
    </div>
    <div class="row">

      <div class="d-flex flex-row justify-content-center">
        <form class="row g-3" action="/seller/product" method="get">

          <% if(search.q){ %>
          <div class="col-auto">
            <input type="search" name="q" value="<%= search.q %>" class="form-control form-control-lg" id="" placeholder="Search what you want...">
          </div>
          <% }else{%>
          <div class="col-auto">
            <input type="search" name="q" class="form-control form-control" id="" placeholder="Search what you want...">
          </div>
          <% } %>
          <div class="col-auto">
            <button type="submit" class="btn btn-outline-primary mb-3">Search</button>
          </div>
        </form>
      </div>
      <div class="row justify-content-md-center">
        <% for(let post of posts.data) { %>


        <!-- product card start -->
        <div class="card" style="width: 18rem; margin: 10px;">

          <a href="/product/<%= post.id %>">

            <!-- display images -->
            <% for(let image in post.ProductImage){ %>
            <img class="card-img-top" src="/uploads/products/<%= post.ProductImage[image].url %>" alt=" <%= post.name %>" />
            <% } %>
          </a>

          <div class="card-body">
            <h5 class="card-title"> <a href="/product/<%= post.id %>">
                <%= post.name %>
              </a> </h5>
            <p class="card-text">
              <%= post.store.StoreDetails[0].displayName %>
            </p>
            <p class="card-text">
              <%= post.description %>
            </p>
            <p class="card-text">
              Stock: <%= post.stock %>
            </p>
            <p class="card-text">
              Price: <%= post.price %>
            </p>

            <form name="add-blog-post-form" id="add-blog-post-form" method="post" action="/cart/add">

              <input type="hidden" class="btn btn-primary" name="productId" value="<%= post.id %> "></a>
              <input type="submit" class="btn btn-primary" value="Add to cart"></a>
              <input type="number" style="width: 30%; text-align: center;" name="qnty" value="1"></a>
            </form>
          </div>
        </div>
        <!-- product card end -->
        <br />
        <% } %>

        <% if(search.q){ %>

        <nav aria-label="Page navigation example">
          <ul class="pagination">
            <% for(let i=0; i < posts.pagination; i++) {%>
            <li class="page-item">
              <% if(page == i+1){ %>
              <a class="page-link active" href="/seller/product?q=<%= search.q %>&page=<%= i+1 %>"><%= i+1 %></a>
              <% } else { %>
              <a class="page-link" href="/seller/product?q=<%= search.q %>&page=<%= i+1 %>"><%= i+1 %></a>
              <% } %>
            </li>
            <% } %>
          </ul>
        </nav>
        <% } else{ %>

        <nav aria-label="Page navigation example">
          <ul class="pagination">
            <% for(let i=0; i < posts.pagination; i++) {%>
            <li class="page-item">
              <% if(page == i+1){ %>
              <a class="page-link active" href="/seller/product?page=<%= i+1 %>"><%= i+1 %></a>
              <% } else { %>
              <a class="page-link" href="/seller/product?page=<%= i+1 %>"><%= i+1 %></a>
              <% } %>
            </li>
            <% } %>
          </ul>
        </nav>

        <% } %>
      </div>

    </div>



  </div>
  </div>
</main>
<!-- End Main section -->


<script>
  //show image from local image upload
  j("#image").on("change", function() {
    j("#image").imageSet(j("#img"));
    j('#img').css('width', '500px');
    j('#img').css('height', '500px');
  });
</script>

<%- include('../partials/footer'); -%>